<Window x:Name="SongMainWindow" x:Class="SportunifyForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DetailForm"
        mc:Ignorable="d"
        Title="Song Manager - ver.24-SU" Height="685" Width="1220" Background="Aqua" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="SongMainWindow_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="897*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Spotify - Listen Together" HorizontalAlignment="Left" Height="53" Margin="566,15,0,0" VerticalAlignment="Top" Width="331" FontWeight="Heavy" FontSize="24" Grid.Column="3"/>
        <Rectangle HorizontalAlignment="Left" Height="95" Margin="39,144,0,0" Stroke="Black" VerticalAlignment="Top" Width="1145" Fill="Aquamarine" Grid.ColumnSpan="4"/>
        <Label Content="Song Name" HorizontalAlignment="Center" Height="45" Margin="0,174,0,0" VerticalAlignment="Top" Width="107" Foreground="#ff4500" Grid.ColumnSpan="2"/>
        <TextBox x:Name="SongNameTextBox" HorizontalAlignment="Left" Height="26" Margin="16,178,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="230" TabIndex="0" Grid.Column="1" Grid.ColumnSpan="3"/>
        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Height="50" Margin="666,166,0,0" VerticalAlignment="Top" Width="165" TabIndex="2" Grid.Column="3" />

        <Button x:Name="CreateButton" Content="Create Song" HorizontalAlignment="Left" Height="50" Margin="696,319,0,0" VerticalAlignment="Top" Width="165" TabIndex="4" Grid.Column="3" />

        <Button x:Name="UpdateButton" Content="Update Song" HorizontalAlignment="Left" Height="50" Margin="696,397,0,0" VerticalAlignment="Top" Width="165" TabIndex="5" Grid.Column="3" />
        <Button x:Name="DeleteButton" Content="Delete Song" HorizontalAlignment="Left" Height="50" Margin="696,480,0,0" VerticalAlignment="Top" Width="165" TabIndex="6" Grid.Column="3" />
        <Button x:Name="QuitButton" Content="Quit" HorizontalAlignment="Left" Height="50" Margin="696,559,0,0" VerticalAlignment="Top" Width="165" TabIndex="7" Grid.Column="3" />
        <DataGrid x:Name="SongListDataGrid" 
                  HorizontalAlignment="Left" 
                  Height="292" 
                  Margin="39,319,0,0" 
                  VerticalAlignment="Top" 
                  Width="950"
                    AutoGenerateColumns="False" IsReadOnly="True" Grid.ColumnSpan="4"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Song Name" Width="350"/>
                <DataGridTextColumn Header="Artist" Width="300"/>
                <DataGridTextColumn Header="Category" Width="300"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="NowPlayingTextBox" HorizontalAlignment="Left" Height="25" Margin="39,274,0,0" TextWrapping="Wrap" Text="Now Playing: " VerticalAlignment="Top" Width="349" FontSize="17" Grid.ColumnSpan="4"/>
        <Label Content="Artist" HorizontalAlignment="Left" Height="30" Margin="149,182,0,0" VerticalAlignment="Top" Width="54" Foreground="#ff4500" Grid.Column="3"/>
        <Label Content="Song Name" HorizontalAlignment="Center" Height="45" Margin="0,174,0,0" VerticalAlignment="Top" Width="107" Foreground="#ff4500" Grid.ColumnSpan="2"/>
        <TextBox x:Name="ArtistTextBox" HorizontalAlignment="Left" Height="26" Margin="208,178,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="230" TabIndex="0" Grid.Column="3"/>
        <Label x:Name="HelloNameLabel" Content="Xin chào " HorizontalAlignment="Left" Height="53" Margin="39,15,0,0" VerticalAlignment="Top" Width="909" FontWeight="Heavy" FontSize="24" Grid.ColumnSpan="4"/>

    </Grid>
</Window>
