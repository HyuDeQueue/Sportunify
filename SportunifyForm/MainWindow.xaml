<Window x:Name="SongMainWindow" x:Class="SportunifyForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DetailForm"
        mc:Ignorable="d"
        Title="Song Manager - ver.24-SU" Height="685" Width="1220" Background="#7C9EFF" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="SongMainWindow_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="897*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Spotify - Listen Together" HorizontalAlignment="Left" Height="53" Margin="566,15,0,0" VerticalAlignment="Top" Width="331" FontWeight="Heavy" FontSize="24" Grid.Column="3" Grid.Row="1"/>
        <Rectangle HorizontalAlignment="Left" Height="95" Margin="32,82,0,0" Stroke="Black" VerticalAlignment="Top" Width="1145" Fill="Aquamarine" Grid.ColumnSpan="4" Grid.Row="1"/>
        <Label Content="Song Name" HorizontalAlignment="Left" Height="45" Margin="66,112,0,0" VerticalAlignment="Top" Width="107" Foreground="#ff4500" Grid.ColumnSpan="2" Grid.Row="1"/>
        <TextBox x:Name="SongNameTextBox" HorizontalAlignment="Left" Height="26" Margin="9,116,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="230" TabIndex="0" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1"/>
        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Height="50" Margin="659,104,0,0" VerticalAlignment="Top" Width="165" TabIndex="2" Grid.Column="3" Grid.Row="1" />
        <Button x:Name="CreateButton" Content="Create Song" HorizontalAlignment="Left" Height="50" Margin="689,267,0,0" VerticalAlignment="Top" Width="165" TabIndex="4" Grid.Column="3" Grid.Row="1" Click="CreateButton_Click" />
        <Button x:Name="UpdateButton" Content="Update Song" HorizontalAlignment="Left" Height="50" Margin="689,345,0,0" VerticalAlignment="Top" Width="165" TabIndex="5" Grid.Column="3" Grid.Row="1" />
        <Button x:Name="DeleteButton" Content="Delete Song" HorizontalAlignment="Left" Height="50" Margin="689,428,0,0" VerticalAlignment="Top" Width="165" TabIndex="6" Grid.Column="3" Grid.Row="1" />
        <Button x:Name="QuitButton" Content="Quit" HorizontalAlignment="Left" Height="50" Margin="689,507,0,0" VerticalAlignment="Top" Width="165" TabIndex="7" Grid.Column="3" Grid.Row="1" Click="QuitButton_Click" />
        <DataGrid x:Name="QueueDataGrid" 
                  HorizontalAlignment="Left" 
                  Height="292" 
                  Margin="39,244,0,0" 
                  VerticalAlignment="Top" 
                  Width="300"
                    AutoGenerateColumns="False" IsReadOnly="True" Grid.ColumnSpan="4" Grid.Row="1"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Song Name" Width="130"/>
                <DataGridTextColumn Header="Artist" Width="90"/>
                <DataGridTextColumn Header="Category" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="NowPlayingTextBox" HorizontalAlignment="Left" Height="25" Margin="40,214,0,0" TextWrapping="Wrap" Text="Now Playing: " VerticalAlignment="Top" Width="299" FontSize="17" Grid.ColumnSpan="4" IsEnabled="False" Grid.Row="1" />
        <Label Content="Artist" HorizontalAlignment="Left" Height="30" Margin="142,120,0,0" VerticalAlignment="Top" Width="54" Foreground="#ff4500" Grid.Column="3" Grid.Row="1"/>
        <Label Content="Song Name" HorizontalAlignment="Left" Height="45" Margin="66,112,0,0" VerticalAlignment="Top" Width="107" Foreground="#ff4500" Grid.ColumnSpan="2" Grid.Row="1"/>
        <TextBox x:Name="ArtistTextBox" HorizontalAlignment="Left" Height="26" Margin="201,116,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="230" TabIndex="0" Grid.Column="3" Grid.Row="1"/>
        <Label x:Name="HelloNameLabel" Content="Xin chào " HorizontalAlignment="Left" Height="53" Margin="39,15,0,0" VerticalAlignment="Top" Width="831" FontWeight="Heavy" FontSize="24" Grid.ColumnSpan="4" Grid.Row="1"/>
        <DataGrid x:Name="SongListDataGrid" 
            HorizontalAlignment="Left" 
            Height="292" 
            Margin="36,243,0,0" 
            VerticalAlignment="Top" 
            Width="300"
            AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="1" Grid.Column="3"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Song Name" Width="130" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Artist" Width="90" Binding="{Binding ArtistName}"/>
                <DataGridTextColumn Header="Category" Width="80" Binding="{Binding CategoryId}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Your Queue:" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="36,177,53,460" FontSize="20" FontWeight="Bold"/>
        <Label Content="Songs:" Grid.RowSpan="2" Margin="36,182,561,391" FontSize="20" FontWeight="Bold" Grid.Column="3"/>
        <DataGrid x:Name="PlaylistDataGrid" 
            HorizontalAlignment="Left" 
            Height="292" 
            Margin="356,243,0,0" 
            VerticalAlignment="Top" 
            Width="300"
            AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="1" Grid.Column="3"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Playlist Name" Width="100"/>
                <DataGridTextColumn Header="Description" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Your Playlists:" Grid.RowSpan="2" Margin="356,182,241,426" FontSize="20" FontWeight="Bold" Grid.Column="3"/>
        <Button x:Name="ViewAllUser" Content="View User" HorizontalAlignment="Left" Height="50" Margin="689,189,0,0" VerticalAlignment="Top" Width="165" TabIndex="4" Grid.Column="3" Grid.Row="1" Click="ViewAllUser_Click"/>
        <Button x:Name="YourSongsButton" Grid.Column="3" Content="Your songs" HorizontalAlignment="Left" Height="42" Margin="36,540,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="150" Click="YourSongsButton_Click"/>
        <Button x:Name="AllSongsButton" Grid.Column="3" Content="All songs" HorizontalAlignment="Left" Height="42" Margin="191,540,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="150" Click="AllSongsButton_Click"/>

    </Grid>
</Window>
